<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HolisticApp.Views.RegistrationPage"
    Title="Registrierung">
    <StackLayout Padding="20">
        <Entry x:Name="UsernameEntry" Placeholder="Benutzername" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Passwort" IsPassword="True" />
        <Button Text="Registrieren" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>