<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolisticApp.Views.AnamnesisPage"
             Title="Anamnese">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Alter -->
            <Label Text="Alter (Jahre):" />
            <Entry x:Name="AgeEntry" Placeholder="Alter eingeben" Keyboard="Numeric" />

            <!-- Geschlecht -->
            <Label Text="Geschlecht:" />
            <Picker x:Name="GenderPicker" Title="Wähle dein Geschlecht">
                <Picker.Items>
                    <x:String>Männlich</x:String>
                    <x:String>Weiblich</x:String>
                    <x:String>Divers</x:String>
                </Picker.Items>
            </Picker>

            <!-- Größe -->
            <Label Text="Größe (cm):" />
            <Entry x:Name="HeightEntry" Placeholder="Größe eingeben" Keyboard="Numeric" />

            <!-- Gewicht -->
            <Label Text="Gewicht (kg):" />
            <Entry x:Name="WeightEntry" Placeholder="Gewicht eingeben" Keyboard="Numeric" />

            <!-- Beschwerde -->
            <Label Text="Haben Sie aktuelle Beschwerden?" />
            <Switch x:Name="complaintSwitch" Toggled="OnComplaintToggled" />

            <Label x:Name="complaintLabel" Text="Bitte wählen Sie Ihre Beschwerden:" IsVisible="False" />
            <Picker x:Name="complaintPicker" Title="Wähle eine Beschwerde" IsVisible="False">
                <Picker.Items>
                    <x:String>Verdauungsbeschwerden</x:String>
                    <x:String>Kopfschmerzen</x:String>
                    <x:String>Rückenschmerzen</x:String>
                </Picker.Items>
            </Picker>

            <Label x:Name="severityLabel" Text="Stärke der Beschwerden: 1" IsVisible="False" />
            <Slider x:Name="severitySlider" Minimum="1" Maximum="10" Value="1"
                    IsVisible="False" ValueChanged="OnSeverityChanged" />

            <!-- Speichern-Button -->
            <Button Text="Speichern" Clicked="OnSaveClicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
